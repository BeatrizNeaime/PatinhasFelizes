<div class="caixa">
    <div class="titulo">
        <h1 class="title">Animais</h1>
    </div>
    <div class="content">
        <div class="galeria">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                {{#if animais}}
                {{#each animais}}
                <div class="col">
                    <div class="card shadow-sm">
                        <img width="100%" height="100%" fill="#55595c" src="{{foto}}"></img>
                        </svg>
                        <div class="card-body">
                            <p class="card-text">
                            <ul class="info">
                                <li class="nome">{{nome}}</li>
                                <li>Espécie: {{tipo}}</li>
                                <li>Idade: {{idade}}</li>
                                <li>Raça: {{raca}}</li>
                                {{#if adotado}}
                                <li class="adotado">Adotado</li>
                                {{else}}
                                <li class="adocao">Aguardando</li>
                                {{/if}}
                            </ul>
                            </p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                                    <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
                {{/if}}
            </div>
        </div>
    </div>
</div>

<style>
    .caixa {
        align-items: center;
        display: flex;
        flex-direction: column;
        justify-content: space-evenly;
    }

    .content {
        align-items: center;
        display: flex;
        justify-content: space-evenly;
    }

    .galeria {
        width: 80%;
    }

    img{
        object-fit: fit;
    }

    .titulo {
        height: 40%;
    }
</style>