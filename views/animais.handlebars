<div class="caixa">
    <div class="titulo">
        <h1 class="title">Pacotinhos</h1>
    </div>
    <div class="botao-add">
        <button class="btn-add"><a href="/add-animal">Adicionar novo pacotinho</a></button>
    </div>
    <div class="content">
        {{#if alerta}}
        <div class="alert alert-success" role="alert">
            {{alerta}}
        </div>
        {{/if}}
        <div class="galeria">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3 middle">
                {{#if animais}}
                {{#each animais}}
                <div class="col">
                    <div class="card shadow-sm">
                        {{#if foto}}
                        <img width="100%" height="100%" fill="#55595c" src="{{foto}}"></img>
                        {{else}}
                        <img width="100%" height="100%" fill="#55595c"
                            src="https://i.pinimg.com/736x/dc/c6/6a/dcc66a7ef2f74e81da4fdf3f1b52ab81.jpg"></img>
                        {{/if}}
                        <div class="card-body">
                            <p class="card-text">
                            <ul class="info">
                                <li class="nome">{{nome}}</li>
                                <li>Espécie: {{tipo}}</li>
                                <li>Idade: {{idade}}</li>
                                <li>Raça: {{raca}}</li>
                                {{#if sexo}}
                                <li>Sexo: fêmea</li>
                                {{else}}
                                <li>Sexo: macho</li>
                                {{/if}}
                                {{#if adotado}}
                                <div class="adopted">
                                    <li class="adotado">Adotado</li>
                                </div>
                                {{else}}
                                <div class="waiting">
                                    <li class="adocao">
                                        Aguardando
                                    </li>
                                </div>
                                {{/if}}

                            </ul>
                            </p>
                            <div class="d-flex justify-content-between align-items-center">
                                {{#if adotado}}
                                <div class="btn-group">
                                    <button type="button" class="btn btn-sm btn-outline-secondary"><a
                                            href="/edit-animal?id={{IDAnimal}}">Editar</a></button>
                                    <button type="button" class="btn btn-sm btn-outline-secondary excluir"><a
                                            href="/excluir-animal?id={{IDAnimal}}">Excluir</a></button>
                                </div>
                                {{else}}
                                <div class="btn-group">
                                    <button type="button" class="btn btn-sm btn-outline-secondary"><a
                                            href="/add-adocao/{{IDAnimal}}" class="add">Adoção</a></button>
                                    <button type="button" class="btn btn-sm btn-outline-secondary"><a
                                            href="/edit-animal?id={{IDAnimal}}">Editar</a></button>
                                    <button type="button" class="btn btn-sm btn-outline-secondary excluir"><a
                                            href="/excluir-animal?id={{IDAnimal}}">Excluir</a></button>
                                </div>
                                {{/if}}
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
                {{else}}
                <div class="nada">
                    <p>Ops! Parece que não temos pacotinhos!</p>
                </div>
                {{/if}}
            </div>
        </div>
    </div>
</div>

<style>
    button a {
        text-decoration: none;
    }

    .col {
        width: 300px;
    }

    .adopted {
        background-color: #a3bf3b;
        color: #fefefe;
    }

    .adopted,
    .waiting {
        border-radius: 6px;
        text-align: center;
        width: 100%;
    }

    .adopted li::before,
    .waiting li::before {
        content: none !important;
    }

    .botao-add {
        align-items: center;
        display: flex;
        justify-content: flex-end;
        margin: 1.5rem 0;
        padding: 0 2rem;
        width: 80%;
    }

    .btn-add {
        background-color: #c6d982;
        border: none;
        border-radius: 6px;
        padding: 10px;
    }

    .btn-add a {
        color: #fefefe;
        text-decoration: none;
    }

    .btn-add:hover {
        background-color: #a3bf3b;
    }

    .caixa {
        align-items: center;
        display: flex;
        flex-direction: column;
        justify-content: space-evenly;
    }

    .content {
        align-items: center;
        display: flex;
        justify-content: space-evenly;
        width: 90%;
    }

    .excluir {
        background-color: #ed1b2e;
        border: none;
    }

    .excluir:hover {
        background-color: #ad0311;
    }

    .excluir a {
        color: #fefefe;
        text-decoration: none;
    }

    footer {
        margin-top: 2rem;
    }

    .galeria {
        align-items: center;
        display: flex;
        justify-content: space-evenly;
        width: 80%;
    }

    img {
        height: auto;
        max-height: 194.85px;
        max-width: 371.33px;
        width: auto;
    }

    .info li {
        list-style: none;
    }

    .info li::before {
        content: "\1F43E ";
    }

    .middle {
        align-items: center;
        display: flex;
        justify-content: space-evenly;
    }

    .nada {
        width: 100%;
    }

    .nome {
        font-size: 20px;
    }

    .nome::before {
        content: none !important;
    }

    .titulo {
        height: 50% !important;
        margin: 1rem 0;
        padding: 1.5rem;
    }

    .waiting {
        background-color: #ed1b2e;
        color: #fefefe;
    }

    @media screen and (max-width: 1023px) {
        .botao-add {
            align-items: center;
            display: flex;
            justify-content: space-evenly;
            width: 100%;
        }
    }
</style>