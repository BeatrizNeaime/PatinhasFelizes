<div class="caixa">
    <div class="titulo">
        <h1 class="title">Funcionários</h1>
    </div>
    <div class="botao-add">
        <button class="btn-add"><a href="/add-func">Adicionar novo funcionário</a></button>
    </div>
    <div class="content">
        <div class="galeria">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3 middle">
                {{#if func}}
                {{#each func}}
                <div class="col aaaa">
                    <div class="card shadow-sm ola">
                        {{#if foto}}
                        <img width="100%" height="100%" fill="#55595c" src="{{{foto}}}"></img>
                        {{else}}
                        <img src="..." class="card-img-top" alt="...">
                        {{/if}}
                        <div class="card-body">
                            <p class="card-text">
                            <ul class="info">
                                <li class="nome">{{{Nome}}}</li>
                                <li>Tipo de Colaborador: {{{Tipo_Colab}}}</li>
                                <li>Cargo: {{{Setor}}}</li>
                                <li>Matrícula: {{{CPF}}}</li>
                                <li>Salário: R${{{Salario}}}</li>
                                <li>Contato: {{{email}}}</li>
                            </ul>
                            </p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <button type="button" class="btn btn-sm btn-outline-secondary">Alterar</button>
                                    <button type="button" class="btn btn-sm btn-outline-secondary"><a
                                            href="/excluir?id={{CPF}}">Excluir</a></button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
                {{/if}}
            </div>
        </div>
    </div>
</div>

<style>
    .adopted {
        background-color: #a3bf3b;
        color: #fefefe;
    }

    .adopted,
    .waiting {
        border-radius: 6px;
        text-align: center;
        width: 60%;
    }

    .botao-add {
        align-items: center;
        display: flex;
        justify-content: flex-end;
        padding: 0 2rem;
        width: 80%;
    }

    .btn-add {
        background-color: #c6d982;
        border: none;
        border-radius: 6px;
        padding: 10px;
    }

    .btn-add a {
        color: #fefefe;
        text-decoration: none;
    }

    .btn-add:hover {
        background-color: #a3bf3b;
    }

    .caixa {
        align-items: center;
        display: flex;
        flex-direction: column;
        justify-content: space-evenly;
    }

    .aaa {
        max-width: 350px;
        width: auto;
    }

    .content {
        align-items: center;
        display: flex;
        justify-content: space-evenly;
    }

    .galeria {
        align-items: center;
        display: flex;
        justify-content: space-evenly;
        margin: 2rem;
        width: 80%;
    }

    .ola img {
        height: auto;
        max-height: 194.85px;
        max-width: 371.33px;
        width: auto;
    }

    .info li {
        list-style: none;
    }

    .info li::before {
        content: "\1F43E ";
    }

    .middle {
        align-items: center;
        display: flex;
        justify-content: space-evenly;
    }

    .nome {
        font-size: 20px;
    }

    .info .nome::before {
        content: "";
    }

    .titulo {
        height: 50% !important;
        margin: 1rem 0;
        padding: 1.5rem;
    }

    .waiting {
        background-color: #ed1b2e;
        color: #fefefe;
    }
</style>