<div class="caixa">
    <div class="titulo">
        <h1 class="title">Finanças</h1>
    </div>
    <div class="container text-center">
        <div class="row">
            <div class="col">
                <div class="infos">
                    <div class="texto">
                        <h3>Dinheiro <i class='bx bx-money-withdraw'></i></h3>
                    </div>
                    <div class="trem">
                        {{dinheiro}}
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="infos">
                    <div class="texto">
                        <h3>Ração <i class='bx bxs-bowl-rice'></i></h3>
                    </div>
                    <div class="trem">
                        {{racao}}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="botao-add">
        <button class="btn-add"><a href="/add-doacao">Adicionar nova doação</a></button>
    </div>
    <div class="content">
        {{#if alerta}}
        <div class="alert alert-success" role="alert">
            {{alerta}}
        </div>
        {{/if}}
        <div class="galeria">
            {{#if d}}
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Doador</th>
                        <th scope="col">Tipo</th>
                        <th scope="col">Valor</th>
                        <th scope="col">Data</th>
                        <th scope="col">Matrícula do mediador</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each d}}
                    <tr>
                        {{#if Nome}}
                        <td>{{{Nome}}}</td>
                        {{else}}
                        <td>Anônimo</td>
                        {{/if}}
                        {{#if Tipo}}
                        <td>
                            <div class="racao">
                                <p>Ração</p>
                            </div>
                        </td>
                        {{else}}
                        <td>
                            <div class="dinheiro">
                                <p>Dinheiro</p>
                            </div>
                        </td>
                        {{/if}}
                        <td>{{{Valor}}}</td>
                        <td>{{{Dia}}}</td>
                        <td>{{{CPF}}}</td>
                        <td>
                            <a href="" class="editar"><i class='bx bxs-edit'></i></a>
                            <a href="/excluir-doacao?id={{NDoacao}}" class="excluir"><i class='bx bx-x-circle'></i>
                                </a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            {{else}}
            <div class="nada">
                <p>Ops! Parece que não temos dados no sistema!</p>
            </div>
            {{/if}}
        </div>
    </div>
</div>
</div>

